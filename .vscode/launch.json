{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "npm: watch",
			"sourceMaps": true
		},
		{
			"name": "Attach to Server",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"restart": true,
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"sourceMaps": true
		}
	],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": ["Run Extension", "Attach to Server"]
		}
	]
}
